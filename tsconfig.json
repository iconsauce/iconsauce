{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "removeComments": true,
    "outDir": "lib",
    "sourceMap": true
  },
  "include": [
    "src",
    ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
