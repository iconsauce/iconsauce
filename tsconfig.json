{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "lib",
    "test",
    "node_modules"
  ]
}
